<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_profile_back"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_marginBottom="49dp"
        android:text="Time Spent Traveling: 8:17"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/gallons_saved"
        android:layout_marginBottom="22dp"
        android:text="Favorite Routes: 12"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/gallons_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="19dp"
        android:text="Gasoline Saved: 10.2 Gal "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerVertical="true"
        android:text="Routes Logged: 324"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btn_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtview_Profile"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:background="@android:color/transparent"
        android:rotationX="-1"
        android:src="@drawable/arrow_64"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Distance Traveled: 103 Mi"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/routes_entered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="18dp"
        android:text="Rider Score: 6,791"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Mitch Thornton"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtview_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/routes_entered"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="58dp"
        android:text="User Profile"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>