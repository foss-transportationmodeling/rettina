<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_share"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Ride Experience"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/ratingbar_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rating"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/tv_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ratingbar_driver"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Seats Available"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/ratingbar_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_capacity"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:id="@+id/radio_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/spinner_locationping"
        android:layout_below="@+id/tv_locationsharing"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@+id/spinner_locationping" >

        <RadioButton
            android:id="@+id/radio_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:text="Network" />

        <RadioButton
            android:id="@+id/radio_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_usershare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@android:color/white"
        android:text="Share"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radio_location"
        android:layout_alignRight="@+id/ratingbar_space"
        android:layout_below="@+id/radio_location"
        android:layout_marginTop="35dp"
        android:background="@drawable/dotted_txt"
        android:fontFamily="sans-serif-regular"
        android:hint="Comment"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_locationsharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_capacity"
        android:layout_below="@+id/ratingbar_space"
        android:layout_marginTop="14dp"
        android:text="Location Sharing"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinner_locationping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_locationsharing"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/btn_usershare" />

    <TextView
        android:id="@+id/tv_pingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio_location"
        android:layout_alignRight="@+id/spinner_locationping"
        android:text="Location Update Time"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>